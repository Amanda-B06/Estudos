programa {

  funcao inicio() {
    //Isso aqui é as variáveis
    inteiro Valor_1, Valor_2
    real Soma

     //Esse é a pergunta do valor 1
     escreva ("Digite um valor: ")
     leia (Valor_1)

     //Pergunta do valor 2
     escreva ("Digite outro valor: ")
     leia (Valor_2)
 
     //Cálculo
      Soma=Valor_1+Valor_2

     //A saída
    escreva ("A soma entre ",Valor_1, " e ",Valor_2, " é igual a ",Soma)
    
  }
}
