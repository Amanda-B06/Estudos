programa {
  real Num_A, Num_B, Soma

  funcao inicio() {
    
      escreva ("Digite o primeiro número decimal (ex: 3.5): ")
      leia (Num_A)

      escreva ("Digite o segundo decimal (ex: 2.25): ")
      leia (Num_B)

      Soma= Num_A+Num_B

      escreva ("A soma de ", Num_A , " e ", Num_B , " é: ", Soma)
  }
}
