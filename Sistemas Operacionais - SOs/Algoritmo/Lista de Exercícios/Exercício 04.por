programa {
   real Num1, Num2, Result

  funcao inicio() {
    //Pergunta para o primeiro número
    escreva ("Digite um valor: ")
    leia (Num1)
     
    //Pergunta para o segundo número
    escreva ("Digite outro valor: ")
    leia (Num2)
 
    //Cálculo dos números
    Result=Num1+Num2

    //Saída do cálculo
    escreva ("A soma entre ", Num1, " e ", Num2,  " é igual a ", Result, ".")
  }
}
